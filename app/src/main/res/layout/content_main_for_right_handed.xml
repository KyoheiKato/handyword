<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5" />

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <Button
            app:layout_marginTopPercent="0%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="20%"
            android:id="@+id/menu_all_words_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/word_type_all"
            android:drawableLeft="@android:drawable/ic_menu_slideshow"
            android:layout_weight="5"/>

        <Button
            app:layout_marginTopPercent="25%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="20%"
            android:id="@+id/menu_add_words_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_add"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:layout_weight="5"/>

        <Button
            app:layout_marginTopPercent="50%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="20%"
            android:id="@+id/menu_question_words_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_menu_question"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:layout_weight="5"/>


    </android.support.percent.PercentFrameLayout>


</LinearLayout>
