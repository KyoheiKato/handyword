<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word_type_weak"
        android:drawableLeft="@android:drawable/ic_dialog_alert"
        android:layout_weight="5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word_type_not_learned"
        android:drawableLeft="@android:drawable/ic_input_get"
        android:layout_weight="5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word_type_learned"
        android:drawableLeft="@android:drawable/ic_dialog_dialer"
        android:layout_weight="5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word_type_all"
        android:drawableLeft="@android:drawable/ic_menu_slideshow"
        android:layout_weight="5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_chart"
        android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
        android:layout_weight="5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_search"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:layout_weight="5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_add"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:layout_weight="5"/>


</LinearLayout>
