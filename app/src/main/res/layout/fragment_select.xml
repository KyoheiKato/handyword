<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="jp.ac.tsukuba.cs.coins_p.aid.handyword.SelectFragment">

    <TextView
        android:id="@+id/text_question_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_marginTopPercent="10%"
        android:text="QUESTION_TYPE"
        android:textSize="28sp"/>

    <Button
        android:id="@+id/button_word_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="30%"
        app:layout_marginTopPercent="20%"
        android:text="単語帳を開く"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/button_quiz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="30%"
        app:layout_marginTopPercent="55%"
        android:text="問題を出す"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"/>

</android.support.percent.PercentFrameLayout>
