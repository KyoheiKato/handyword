<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".wordcard.AddWordCardActivity">

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5">
    </View>

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">
        <TextView
            android:id="@+id/label_japanese"
            android:text="日本語"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="0%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="50%"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="15%"
            android:background="#FFEEFF">
            <EditText
                android:id="@+id/edit_text_japanese"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="日本語を入力"
                android:inputType="text"/>
        </FrameLayout>
        <Button
            android:id="@+id/button_translate_en_to_ja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="25%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="15%"
            android:text="翻訳∨"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/label_english"
            android:text="英語"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="40%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="5%"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="45%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="15%"
            android:background="#FFEEFF">
            <EditText
                android:id="@+id/edit_text_english"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="英語を入力"
                android:inputType="text"/>
        </FrameLayout>
        <Button
            android:id="@+id/button_register"
            android:text="登録"
            app:layout_marginTopPercent="65%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="15%"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"/>
    </android.support.percent.PercentFrameLayout>

</LinearLayout>
