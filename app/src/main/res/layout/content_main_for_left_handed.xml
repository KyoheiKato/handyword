<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">
        <Button
            app:layout_marginTopPercent="0%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="20%"
            android:id="@+id/button_weak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/word_type_weak"
            android:drawableLeft="@android:drawable/ic_dialog_alert"
            android:layout_weight="5"/>

        <Button
            app:layout_marginTopPercent="25%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="20%"
            android:id="@+id/button_not_learned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/word_type_not_learned"
            android:drawableLeft="@android:drawable/ic_input_get"
            android:layout_weight="5"/>

        <Button
            app:layout_marginTopPercent="50%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="20%"
            android:id="@+id/button_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/word_type_all"
            android:drawableLeft="@android:drawable/ic_menu_slideshow"
            android:layout_weight="5"/>

        <Button
            app:layout_marginTopPercent="75%"
            app:layout_marginLeftPercent="0%"
            app:layout_heightPercent="20%"
            android:id="@+id/button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_add"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:layout_weight="5"/>
    </android.support.percent.PercentFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">
    </View>
</LinearLayout>
