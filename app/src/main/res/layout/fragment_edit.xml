<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.ac.tsukuba.cs.coins_p.aid.handyword.EditFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:paddingTop="5sp"
            android:id="@+id/label_japanese"
            android:text="日本語"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEEFF">
            <EditText
                android:id="@+id/japanese"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:hint="日本語を入力してください"
                android:inputType="text"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="↓翻訳"
                app:layout_marginLeftPercent="10%"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="↑翻訳"
                app:layout_marginLeftPercent="65%"/>
        </LinearLayout>
        <TextView
            android:id="@+id/label_english"
            android:text="英語"
            android:layout_gravity="center_horizontal"
            app:layout_marginLeftPercent="50%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEEFF">
            <EditText
                android:id="@+id/english"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:hint="英語を入力してください"
                android:inputType="text"/>
        </FrameLayout>
        <Button
            android:id="@+id/button_register"
            android:text="登録"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
