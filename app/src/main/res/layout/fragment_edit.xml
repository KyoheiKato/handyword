<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="jp.ac.tsukuba.cs.coins_p.aid.handyword.EditFragment">

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:paddingTop="5sp"
            android:id="@+id/label_japanese"
            android:text="日本語"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="5%"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="15%"
            app:layout_marginTopPercent="5%"
            android:background="#FFEEFF">
            <EditText
                android:id="@+id/japanese"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="日本語を入力"
                android:inputType="text"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="20%"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="∧翻訳"
                android:textSize="30sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="翻訳∨"
                android:textSize="30sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/label_english"
            android:text="英語"
            android:layout_gravity="center_horizontal"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent="60%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="15%"
            app:layout_marginTopPercent="65%"
            android:background="#FFEEFF">
            <EditText
                android:id="@+id/english"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="英語を入力"
                android:inputType="text"/>
        </FrameLayout>
        <Button
            android:id="@+id/button_register"
            android:text="登録"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="80%"
            android:layout_gravity="center_horizontal"/>
    </android.support.percent.PercentFrameLayout>
</android.support.percent.PercentFrameLayout>